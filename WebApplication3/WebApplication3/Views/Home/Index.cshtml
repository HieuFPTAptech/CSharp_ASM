@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="container">
        <h1>List</h1>
        <div class="mb-3">
            <a href="@Url.Action("Create", "ComicBooks")" class="btn btn-primary">Add New Comic Book</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Price Per Day</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var comicBook in Model)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@comicBook.Title</td>
                        <td>@comicBook.Author</td>
                        <td>@comicBook.PricePerDay.ToString("C")</td>
                        <td>
                            <a href="@Url.Action("Details", "ComicBooks", new { id = comicBook.ComicBookID })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Edit", "ComicBooks", new { id = comicBook.ComicBookID })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "ComicBooks", new { id = comicBook.ComicBookID })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No comic books available.</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>