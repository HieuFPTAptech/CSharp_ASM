@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="container">
        <h1>Order List</h1>

        <table>
            <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Order Date</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User.Name</td>
                    <td>@order.OrderDate</td>
                    <td>
                        <ul>
                            @foreach (var detail in order.OrderDetails)
                            {
                                <li>
                                    Product: @detail.Product.Name, Quantity: @detail.Quantity, Price: @detail.UnitPrice
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>